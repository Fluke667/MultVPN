# Basic Enviroment
ENV GOROOT /usr/lib/go
ENV GOPATH /go
ENV PATH /go/bin:$PATH
ENV TZ ${TZ}

# shadowsocks-libev Enviroment
ENV SS_LIBEV_VERSION v3.2.5
ENV KCP_VERSION 20190424
ENV SS_DL https://github.com/shadowsocks/shadowsocks-libev.git 
ENV KCP_DL https://github.com/xtaci/kcptun/releases/download/v${KCP_VERSION}/kcptun-linux-amd64-${KCP_VERSION}.tar.gz
ENV PLUGIN_OBFS_DL https://github.com/shadowsocks/simple-obfs.git
ENV PLUGIN_V2RAY_DL https://github.com/shadowsocks/v2ray-plugin/releases/download/v1.0/v2ray-plugin-linux-amd64-8cea1a3.tar.gz
ENV PLUGIN_CLOAK_DL https://github.com/cbeuw/cloak.git

# TOR Relay Enviroment
ENV TOR_USER MyUser
ENV TOR_NICK MyNick
ENV TOR_EMAIL My@email.com
ENV TOR_PASS MyPass
ENV TORSOCKS_USERNAME MyUser
ENV TORSOCKS_PASSWORD MyPass

# sslh Enviroment
ENV LISTEN_IP 0.0.0.0
ENV LISTEN_PORT 443
ENV HTTPS_HOST 127.0.0.1
ENV HTTPS_PORT 8443
ENV SSH_HOST 127.0.0.1
ENV SSH_PORT 22
ENV OPENVPN_HOST 127.0.0.1
ENV OPENVPN_PORT 1194
ENV TINC_HOST 127.0.0.1
ENV TINC_PORT 655
#ENV XMPP_HOST 127.0.0.1
#ENV XMPP_PORT 5222
#ENV ADB_HOST 127.0.0.1
#ENV ADB_PORT 5037
ENV SHADOWSOCKS_HOST 127.0.0.1
ENV SHADOWSOCKS_PORT 8388
